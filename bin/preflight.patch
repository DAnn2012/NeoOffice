PATH=/bin:/sbin:/usr/bin:/usr/sbin
export PATH

# Check that the required BSD command are installed
for i in $(REQUIRED_COMMANDS) ; do
	if [ ! -x "/usr/bin/$i" -a ! -x "/bin/$i" -a ! -x "/usr/sbin/$i" -a ! -x "/sbin/$i" ] ; then
		echo "One or more Mac OS X commands were not found on this machine. You must have all of the following Mac OS X commands installed on your machine to install $(PRODUCT_NAME) on this machine: $(REQUIRED_COMMANDS)"
		exit 1
	fi
done

umask 022

if [ -d "$2" ] ; then

	# Fix Apple installer bug described in bug 1373
	REAL_2=`cd "$2" ; pwd`
	if [ "$2" = "/" -o "$2" = "$3" -o "$REAL2" = "/" -o "$REAL_2" = "$3" ]; then
		exit 1;
	fi

fi

if [ -d "$2/Contents" ] ; then

	rm -Rf "$2/Contents" || exit 1

fi

exit 0
