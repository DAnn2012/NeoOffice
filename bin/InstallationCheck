PATH=/usr/bin:/bin:/usr/sbin:/sbin
export PATH

# Check that the BSD tools are installed
if [ ! -d "/Library/Receipts/BSD.pkg" ] ; then
	exit 99;
fi

# Check that the user is running Mac OS X 10.2 or higher
if [ -x "/usr/bin/sw_vers" ] ; then
    # Return 96 + 3 if it is a bad version
    version=`/usr/bin/sw_vers | grep '^ProductVersion:' | awk '{ print $2 }'`
    case "$version" in
        10.[01]) exit 99;;
        10.[01].*) exit 99;;
    esac
fi

exit 0

