userinstall="$HOME/Library/Preferences/$(PRODUCT_DIR_NAME)-$(PRODUCT_VERSION_FAMILY)"
target_file_type="$(TARGET_FILE_TYPE)"

check_installation() {

	if [ -z "$1" ] ; then
		return 1;
	fi

	file_type=`file "$1/Contents/MacOS/soffice.bin" | sed 's#^.*: ##'`
	if [ "$file_type" != "$target_file_type" ] ; then
		return 1
	fi

	if [ -f "$1/Contents/MacOS/bootstraprc" ] ; then
		# Only allow an exact product version match
		productnameversion="$(PRODUCT_NAME) $(PRODUCT_VERSION)\$"
		productkey=`grep "^ProductKey=$productnameversion" "$1/Contents/MacOS/bootstraprc"`
		if [ ! -z "$productkey" ] ; then
			return 0;
		fi
	fi

	return 1

}

update_installation() {

	if [ ! -f "$2/Contents/Archive.pax.gz" ] ; then
		return 0;
	fi

	check_installation "$1" || return 0

	# Unzip new files
	( cd "$1" || exit 1 ; pax -r -z -f "$2/Contents/Archive.pax.gz" ) || return 1

	# Mark certain directories writable for admin group
	chmod -f ug+w "$1/Contents" || return 1
	chmod -Rf ug+w "$1/Contents/Resources" || return 1
	chmod -Rf ug+w "$1/Contents/share/dict/ooo" || return 1

	return 0

}

