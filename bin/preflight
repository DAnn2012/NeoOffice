PATH=/bin:/sbin:/usr/bin:/usr/sbin
export PATH

umask 022

if [ -d "$2" ] ; then

	# Fix Apple installer bug described in bug 1373
	REAL_2=`cd "$2" ; pwd`
	if [ "$2" = "/" -o "$2" = "$3" -o "$REAL2" = "/" -o "$REAL_2" = "$3" ]; then
		exit 1;
	fi

fi

if [ -d "$2/Contents" ] ; then

	# Save font files for postflight scripts
	if [ -d "$2/Contents/basis-link/share/fonts/truetype" -a ! -e "$2/truetype" ]; then
		mv -f "$2/Contents/basis-link/share/fonts/truetype" "$2" || exit 1
	fi

	if check_installation "$2" ; then
		# Save help files for postflight scripts
		if [ -d "$2/Contents/basis-link/help" -a ! -e "$2/help" ]; then
			mv -f "$2/Contents/basis-link/help" "$2" || exit 1
		fi

		# Save resource files for postflight scripts
		if [ -d "$2/Contents/basis-link/program/resource" -a ! -e "$2/resource" ]; then
			mv -f "$2/Contents/basis-link/program/resource" "$2" || exit 1
		fi

		# Save localization files
		if [ -d "$2/Contents/basis-link/share" -a ! -e "$2/share" ]; then
			mv -f "$2/Contents/basis-link/share" "$2" || exit 1
		fi
	else
		if [ -e "$2/help" ]; then
			rm -Rf "$2/help" || exit 1
		fi

		if [ -e "$2/resource" ]; then
			rm -Rf "$2/resource" || exit 1
		fi

		if [ -e "$2/share" ]; then
			rm -Rf "$2/share" || exit 1
		fi
	fi

	rm -Rf "$2/Contents" || exit 1

fi

exit 0
