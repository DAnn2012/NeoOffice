PATH=/bin:/sbin:/usr/bin:/usr/sbin
export PATH
unset DYLD_LIBRARY_PATH

umask 022

productdir="$2/$(PRODUCT_NAME).app"
if [ -d "$productdir" ]; then
	# Mark certain directories writable for admin group
	chmod -f 775 "$productdir" || exit 1
	chmod -Rf a+r,a-w "$productdir/Contents" || exit 1
	chmod -f 775 "$productdir/Contents" || exit 1
	chmod -Rf ug+w "$productdir/Contents/Resources" || exit 1

	# Fix bug 1584 by marking certain directories writable for root user
	chmod -Rf u+w "$productdir/Contents/basis-link/presets" || exit 1
	chmod -Rf u+w "$productdir/Contents/basis-link/share" || exit 1

	# Make shared extensions writable only for root user
	chmod -Rf u+w "$productdir/Contents/share/uno_packages" || exit 1

	# Touch shared libraries to fix bug 280
	for i in `cd "$productdir/Contents" ; find . -type f -name "*.dylib*" ; find . -type f -name "*.bin"`; do
		touch -f "$productdir/Contents/$i"
	done

	sudouser=
	if [ ! -z "$USER" -a `id -u "$USER"` != "0" ] ; then
		sudouser="$USER"
	fi

	lsregister="/System/Library/Frameworks/CoreServices.framework/Versions/Current/Frameworks/LaunchServices.framework/Versions/Current/Support/lsregister"
	if [ -x "$lsregister" ] ; then
		lsregisterargs="-f -r -all s,d,u"
	else
		lsregister=
	fi

	if [ ! -z "$lsregister" ] ; then
		"$lsregister" $lsregisterargs "$productdir"
		if [ ! -z "$sudouser" ] ; then
			sudo -H -u "$sudouser" /bin/sh -l -c "$lsregister $lsregisterargs \"$productdir\""
		fi
	fi

	# Touch installation directory to force activation of any bundled Spotlight
	# plugins
	touch -f "$productdir"

	# Do a full reindexing of OOo file types
	if [ -x "/usr/bin/mdimport" ] ; then
		/usr/bin/mdimport -r "$productdir/Contents/Library/Spotlight/neolight.mdimporter"
		if [ ! -z "$sudouser" ] ; then
			sudo -H -u "$sudouser" /bin/sh -l -c "/usr/bin/mdimport -r \"$productdir\"/Contents/Library/Spotlight/neolight.mdimporter"
		fi
	fi

	# Register the QuickLook plugin
	if [ -x "/usr/bin/qlmanage" ] ; then
		/usr/bin/qlmanage -r
		if [ ! -z "$sudouser" ] ; then
			sudo -H -u "$sudouser" /bin/sh -l -c "/usr/bin/qlmanage -r"
		fi
	fi

	# Launch installation
	if [ ! -z "$sudouser" ] ; then
		launch=`sudo -H -u "$sudouser" /bin/sh -l -c "defaults read \"$HOME/Library/Containers/$(CERTSANDBOXTEAMIDENTIFIER).org.neooffice.$(PRODUCT_DIR_NAME)/Data/Library/Preferences/$(CERTSANDBOXTEAMIDENTIFIER).org.neooffice.$(PRODUCT_DIR_NAME).plist\" updateSuppressLaunchAfterInstallation 2>/dev/null"`
		if [ -z "$launch" -o "$launch" = "0" ] ; then
			sudo -H -u "$sudouser" /bin/sh -l -c "/usr/bin/open -a \"$productdir/Contents/MacOS/soffice.bin\""
		fi
	fi
fi

exit 0
