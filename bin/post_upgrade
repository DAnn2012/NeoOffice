if [ -d "$2" ]; then

	# Make all files read only
	if [ -d "$2/$(PRODUCT_DIR_NAME).app" ]; then
		chmod -Rf a-w,a+r "$2/$(PRODUCT_DIR_NAME).app"
	fi

	# Replace the default installation path with the actual installation path
	tempfile="$INSTALLER_TEMP/out"
	touch "$tempfile"
	if [ -f "$tempfile" ]; then
		cd "$2"
		for i in `find "$(PRODUCT_DIR_NAME).app/Contents/share/config/registry" -type f` "$(PRODUCT_DIR_NAME).app/Contents/user/config/javarc"; do
			rm -f "$tempfile"
			cp -p "$i" "$tempfile"
			sed 's#/Applications/$(PRODUCT_DIR_NAME).app#'"$2/$(PRODUCT_DIR_NAME).app"'#g' "$tempfile" > "$i"
			touch -r "$tempfile" "$i"
		done
	fi

fi
