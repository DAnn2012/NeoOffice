product_patch_version=`echo $(PRODUCT_PATCH_VERSION) | sed 's#^Patch ##'`
product_previous_patch_version=`echo $(PRODUCT_PREVIOUS_PATCH_VERSION) | sed 's#^Patch ##'`
userinstall="$HOME/Library/Preferences/$(PRODUCT_DIR_NAME)-$(PRODUCT_VERSION_FAMILY)"
target_file_type="$(TARGET_FILE_TYPE)"

check_installation() {

	if [ -z "$1" ] ; then
		return 1;
	fi

	file_type=`file "$1/Contents/MacOS/soffice.bin" | sed 's#^.*: ##'`
	if [ "$file_type" != "$target_file_type" ] ; then
		return 1
	fi

	if [ ! -f "$1/Contents/Info.plist" ] ; then
		return 1;
	fi

	# Check for matching build machine
	grep '$(BUILD_MACHINE)' "$1/Contents/Info.plist" >/dev/null 2>&1
	if [ "$?" != "0" ] ; then
		return 1;
	fi

	if [ -f "$1/Contents/MacOS/bootstraprc" ] ; then
		productkey=`grep '^ProductKey=' "$1/Contents/MacOS/bootstraprc"`
		productpatch=`grep '^ProductPatch=' "$1/Contents/MacOS/bootstraprc"`
		if [ -z "$productkey" -o -z "$productpatch" ] ; then
			return 1;
		fi
		productkey=`echo $productkey | awk -F= '{ print $2 }'`
		productpatch=`echo $productpatch | awk -F= '{ print $2 }' | sed 's#^Patch ##'`

		if [ "$productkey" = "$(PRODUCT_NAME) $(PRODUCT_VERSION)" ] ; then
			if [ -z "$productpatch" ] ; then
				return 0
			elif [ "$productpatch" -le "$product_patch_version" ] ; then
				return 0
			fi
		fi

		# Only allow an exact product version match
		productnameversion="$(PRODUCT_NAME) $(PRODUCT_VERSION)\$"
		productkey=`grep "^ProductKey=$productnameversion" "$1/Contents/MacOS/bootstraprc"`
		if [ ! -z "$productkey" ] ; then
			return 0;
		fi
	fi

	return 1

}

update_installation() {

	if [ ! -f "$2/Contents/Archive.pax.gz" ] ; then
		return 0;
	fi

	check_installation "$1" || return 0

	# Unzip new files
	( cd "$1" || exit 1 ; pax -r -z -f "$2/Contents/Archive.pax.gz" ) || return 1

	sync

	# Mark certain directories writable for admin group
	chmod -f ug+w "$1" || exit 1
	chmod -f ug+w "$1/Contents" || return 1
	chmod -Rf ug+w "$1/Contents/Resources" || return 1
	chmod -Rf ug+w "$1/Contents/share/dict/ooo" || return 1

	chmod -Rf u+w "$1/Contents/presets" || exit 1
	chmod -Rf u+w "$1/Contents/share" || exit 1

    # Touch shared libraries to fix bug 280
	DYLD_LIBRARY_PATH="$1/Contents/MacOS"; export DYLD_LIBRARY_PATH
	for i in `cd "$1/Contents/MacOS" ; find . -type f -name "*.dylib*"`; do
		touch -f "$1/Contents/MacOS/$i"   
	done
	for i in `cd "$1/Contents/MacOS" ; find . -type f -name "*.bin" ; find . -type f -name "*.jar"`; do
		touch -f "$1/Contents/MacOS/$i"   
	done
	unset DYLD_LIBRARY_PATH

	# Open welcome page
	sudoargs=
	if [ ! -z "$USER" ] ; then
		sudoargs="-u $USER"
	fi
	sudo $sudoargs /System/Library/Frameworks/ApplicationServices.framework/Frameworks/LaunchServices.framework/Versions/Current/Support/lsregister -f "$1"

	# Touch installation directory to force activation of any bundled Spotlight
	# plugins
	touch -f "$1"

	return 0

}

