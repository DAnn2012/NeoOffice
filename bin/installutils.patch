product_patch_version=`echo $(PRODUCT_PATCH_VERSION) | sed 's#^Patch ##'`
product_previous_patch_version=`echo $(PRODUCT_PREVIOUS_PATCH_VERSION) | sed 's#^Patch ##'`
userinstall="$HOME/Library/Preferences/$(PRODUCT_DIR_NAME)-$(PRODUCT_VERSION_FAMILY)/user"

check_installation() {

	if [ -f "$1/Contents/MacOS/bootstraprc" ] ; then
		productkey=`grep '^ProductKey=' "$1/Contents/MacOS/bootstraprc"`
		productpatch=`grep '^ProductPatch=' "$1/Contents/MacOS/bootstraprc"`
		if [ -z "$productkey" -o -z "$productpatch" ] ; then
			return 1;
		fi
		productkey=`echo $productkey | awk -F= '{ print $2 }'`
		productpatch=`echo $productpatch | awk -F= '{ print $2 }' | sed 's#^Patch ##'`

		if [ "$productkey" = "$(PRODUCT_NAME) $(PRODUCT_VERSION)" ] ; then
			if [ -z "$productpatch" ] ; then
				return 0
			elif [ "$productpatch" -le "$product_patch_version" ] ; then
				return 0
			fi
		elif [ "`echo $productkey | sed 's#$(PRODUCT_NAME) $(PRODUCT_PREVIOUS_VERSION) .*$#$(PRODUCT_NAME) $(PRODUCT_PREVIOUS_VERSION)#'`" = "$(PRODUCT_NAME) $(PRODUCT_PREVIOUS_VERSION)" ] ; then
			if [ -z "$product_previous_patch_version" ] ; then
				return 0
			elif [ "$productpatch" -ge "$product_previous_patch_version" ] ; then
				return 0
			fi
		fi
	fi

	return 1

}

update_installation() {

	if [ ! -f "$2/Contents/Resources/$(PRODUCT_DIR_NAME).pax.gz" ] ; then
		return 0;
	fi

	check_installation "$1" || return 0

	# Unzip new files
	( cd "$1" || exit 1 ; pax -r -z -f "$2/Contents/Resources/$(PRODUCT_DIR_NAME).pax.gz" ) || return 1

	sync

	# Mark certain directories writable for admin group
	chmod -f ug+w "$1/Contents" || return 1
	chmod -Rf ug+w "$1/Contents/Resources" || return 1
	chmod -Rf ug+w "$1/Contents/share/dict/ooo" || return 1

    # Touch and reload shared libraries to fix bug 280
	DYLD_LIBRARY_PATH="$1/Contents/MacOS"; export DYLD_LIBRARY_PATH
	for i in `cd "$1/Contents/MacOS" ; find . -type f -name "*.dylib*"`; do
		touch -f "$1/Contents/MacOS/$i"   
		"$2/Contents/Resources/reload_file" "$1/Contents/MacOS/$i"
	done
	for i in `cd "$1/Contents/MacOS" ; find . -type f -name "*.bin" ; find . -type f -name "*.jar"`; do
		touch -f "$1/Contents/MacOS/$i"   
	done

	# Touch installation directory to force activation of any bundled Spotlight
	# plugins
	touch -f "$1"

	# Turn off patch checking by default by uncommenting the following line
	touch -f "$1/Contents/MacOS/.nocheckforpatches"

	return 0

}

