PATH=/bin:/sbin:/usr/bin:/usr/sbin
export PATH

if [ -d "$2" ]; then

	# Fix Apple installer bug described in bug 1373
	if [ "$2" = "/" -o "$2" = "$3" -o `cd "$2" ; pwd` = "/" -o `cd "$2" ; pwd` = "$3" ]; then
		exit 1;
	fi

	rm -Rf "$2/Contents"

fi

scriptdir=`dirname "$0"`
if [ -d "$scriptdir" -a -f "$scriptdir/installutils" ] ; then

	. "$scriptdir/installutils"

	if [ "$3" = "/" ] ; then
		volume=""
	else
		volume="$3"
	fi

	# Fix bug 1544 by repairing permission in user install directory
	if [ -e "$userinstall" ] ; then
		chmod -Rf u+rw "$userinstall"
	fi

	lastcontentshome=
	lastcontentshomefile="$userinstall/.lastcontentshome"
	if [ -s "$lastcontentshomefile" ] ; then

		if [ "$3" = "/" ] ; then
			lastcontentshome=`grep -v '^/Volumes/' "$lastcontentshomefile" | sed 's#/Contents/MacOS/$##'`
		else
			lastcontentshome=`grep "^$volume/" "$lastcontentshomefile" | sed 's#/Contents/MacOS/$##'`
		fi

	fi

	while read i ; do
		update_installation "$i" "$1" || exit 1
	done << !
`( echo "$lastcontentshome" ; find -L "$volume/Applications" -type d -name "*.app" -prune 2>/dev/null ) | sort -u`
!

fi

exit 0

